<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/iv_review_logo_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/ctl_profile_details_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageButton
        android:id="@+id/ib_add_review_back"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_arrow_back"
        android:contentDescription="@string/change_password_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_profile_details_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_review_logo_logo">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/secondary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/example_profile_username"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="normal"
            android:paddingHorizontal="10dp"
            app:layout_constraintStart_toEndOf="@id/civ_profile_image"
            app:layout_constraintTop_toTopOf="@id/civ_profile_image" />

        <TextView
            android:id="@+id/tv_posting_publicly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/edit_review_profile"
            android:textColor="@color/muted"
            android:textSize="12sp"
            android:typeface="normal"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_username"
            app:layout_constraintStart_toEndOf="@id/civ_profile_image"/>

        <Button
            android:id="@+id/btn_add_review_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium"
            android:text="@string/add_review_post_btn"
            android:textAllCaps="true"
            android:textColor="@color/secondary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@id/civ_profile_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/lnl_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_posting_publicly"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/ib_add_review_toilet_rating1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/ic_toilet_review_star"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/ib_add_review_toilet_rating2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/ic_toilet_review_star"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/ib_add_review_toilet_rating3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/ic_toilet_review_star"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/ib_add_review_toilet_rating4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/ic_toilet_review_star"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/ib_add_review_toilet_rating5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:src="@drawable/ic_toilet_review_star"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <EditText
            android:id="@+id/add_review_textbox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/example_profile_review_toilet_review"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/lnl_ratings"/>


        <LinearLayout
            android:id="@+id/lnl_add_review_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/add_review_textbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_add_review_upload_photos"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_borderless"
                android:backgroundTint="@color/tertiary"
                android:text="@string/edit_review_upload_photos_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_review_select_location"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_borderless"
                android:backgroundTint="@color/secondary"
                android:text="@string/add_review_select_location_btn"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:textAllCaps="false" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>