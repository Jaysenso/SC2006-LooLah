<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/iv_fav_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/lnl_fav_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <LinearLayout
        android:id="@+id/lnl_fav_search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_borderless"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/lnl_fav_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_fav_logo"
        app:layout_constraintVertical_chainStyle="packed">

        <EditText
            android:id="@+id/et_fav_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/home_search_hint"
            android:imeOptions="actionGo"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/muted"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btn_fav_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_borderless"
            android:backgroundTint="@color/secondary"
            android:contentDescription="@string/home_search_btn"
            android:src="@drawable/ic_search"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnl_fav_filter"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnl_fav_search">

        <Spinner
            android:id="@+id/sp_fav_filter_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

        <Spinner
            android:id="@+id/sp_fav_filter_district"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

        <Spinner
            android:id="@+id/sp_fav_filter_rating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lnl_fav_filter"
        tools:layout_editor_absoluteX="0dp">

        <include layout="@layout/row_toilet_fav" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>