<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GOOGLE MAP API Implementation -->

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_map_google"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:id="@+id/lnl_map_search"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_borderless"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.SearchView
            android:id="@+id/sv_map_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:elevation="5dp"
            android:fontFamily="sans-serif-medium"
            android:queryBackground="@android:color/transparent"
            android:iconifiedByDefault="false"
            android:queryHint="@string/map_search_hint"/>

        <fragment android:id="@+id/autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            />

        <ImageButton
            android:id="@+id/btn_home_search"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_borderless"
            android:backgroundTint="@color/secondary"
            android:contentDescription="@string/home_search_btn"
            android:src="@drawable/ic_search"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnl_map_filter"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lnl_map_search">

        <Spinner
            android:id="@+id/sp_map_filter_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

        <Spinner
            android:id="@+id/sp_map_filter_district"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

        <Spinner
            android:id="@+id/sp_map_filter_distance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />

        <Spinner
            android:id="@+id/sp_map_filter_rating"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_get_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginStart="320dp"
        android:clickable="true"
        app:backgroundTint="@color/secondary"
        app:layout_constraintBottom_toBottomOf="@+id/fcv_map_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_map_get_current_location" />


</androidx.constraintlayout.widget.ConstraintLayout>