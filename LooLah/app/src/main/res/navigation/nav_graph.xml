<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.loolah.Home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_toiletDetailsFragment"
            app:destination="@id/toiletDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.loolah.Map.MapFragment"
        android:label="MapFragment">
        <action
            android:id="@+id/action_mapFragment_to_toiletRVMenu"
            app:destination="@id/toiletRVMenu" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.loolah.Favorites.FavoriteFragment"
        android:label="FavouriteFragment">
        <action
            android:id="@+id/action_favoritesFragment_to_toiletDetailsFragment"
            app:destination="@id/toiletDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/toiletDetailsFragment"
        android:name="com.example.loolah.ToiletDetails.ToiletDetailsFragment"
        android:label="ToiletDetailsFragment">
<!--        <action-->
<!--            android:id="@+id/action_toiletDetailsFragment_to_reviewFragment"-->
<!--            app:destination="@id/reviewFragment"/>-->
    </fragment>

    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.example.loolah.Reviews.AddReviewFragment"
        android:label="reviewFragment">
    </fragment>


    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.loolah.Profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.loolah.Profile.SettingFragment"
        android:label="SettingFragment">
        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_settingFragment_to_editProfileActivity"
            app:destination="@id/editProfileActivity" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.loolah.Profile.ChangePasswordFragment"
        android:label="ChangePasswordFragment">
        <action
            android:id="@+id/action_changePasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <activity
        android:id="@+id/editProfileActivity"
        android:name="com.example.loolah.Profile.EditProfileActivity" />
    <activity
        android:id="@+id/toiletRVMenu"
        android:name="com.example.loolah.ToiletRVMenu"
        android:label="ToiletRVMenu" />

</navigation>
