<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.loolah.Home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_toiletDetailsFragment"
            app:destination="@id/toiletDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.loolah.Map.MapFragment"
        android:label="MapFragment"></fragment>

    <fragment
        android:id="@+id/toiletDetailsFragment"
        android:name="com.example.loolah.ToiletDetails.ToiletDetailsFragment"
        android:label="ToiletDetailsFragment">
        <action
            android:id="@+id/action_toiletDetailsFragment_to_toiletGalleryFragment"
            app:destination="@id/toiletGalleryFragment" />
    </fragment>

    <fragment
        android:id="@+id/toiletGalleryFragment"
        android:name="com.example.loolah.ToiletDetails.ToiletGalleryFragment"
        android:label="ToiletGalleryFragment"></fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.loolah.Favorites.FavoriteFragment"
        android:label="FavouriteFragment">
        <action
            android:id="@+id/action_favoritesFragment_to_toiletDetailsFragment"
            app:destination="@id/toiletDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.loolah.Profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.loolah.Profile.SettingFragment"
        android:label="SettingFragment">
        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_settingFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.loolah.Profile.ChangePasswordFragment"
        android:label="ChangePasswordFragment">
        <action
            android:id="@+id/action_changePasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.loolah.Profile.EditProfileFragment">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>
