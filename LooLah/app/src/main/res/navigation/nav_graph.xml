<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.loolah.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_toiletDetailsFragment"
            app:destination="@id/toiletDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.loolah.MapFragment"
        android:label="MapFragment">

    </fragment>


    <fragment
        android:id="@+id/toiletDetailsFragment"
        android:name="com.example.loolah.ToiletDetailsFragment"
        android:label="ToiletDetailsFragment">

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.loolah.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.loolah.SettingFragment"
        android:label="SettingFragment">
        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.loolah.ChangePasswordFragment"
        android:label="ChangePasswordFragment">
        <action
            android:id="@+id/action_changePasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>